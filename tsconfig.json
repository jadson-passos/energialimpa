        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "outDir": "./build",
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
